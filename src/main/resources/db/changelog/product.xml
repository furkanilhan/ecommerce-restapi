<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Create Product table -->
    <changeSet id="create-product-table" author="fuilhan">
        <createTable tableName="product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>

            <column name="type" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="brand" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="model" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="is_deleted" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="deleted_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
        </createTable>

        <!-- Index for name column -->
        <createIndex indexName="idx_product_name" tableName="product">
            <column name="name"/>
        </createIndex>

        <!-- Index for description column -->
        <createIndex indexName="idx_product_description" tableName="product">
            <column name="description"/>
        </createIndex>

        <!-- create foreign key for category_id -->
        <addForeignKeyConstraint
                baseTableName="product"
                baseColumnNames="category_id"
                referencedTableName="category"
                referencedColumnNames="id"
                constraintName="fk_product_category"/>
    </changeSet>

