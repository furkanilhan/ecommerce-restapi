<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <changeSet id="1" author="fuilhan">
        <createTable tableName="user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="boolean" defaultValue="true"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="fuilhan">
        <insert tableName="user">
            <column name="id" value="1"/>
            <column name="username" value="user"/>
            <column name="password" value="$2a$10$u9uLe3y8tD7eUQJAz7eys.dL86ZJfPljFkFbVnvT2LpD.RXeVd8zu"/> <!-- bcrypt ile şifrelenmiş parola -->
            <column name="email" value="user@example.com"/>
            <column name="enabled" value="true"/>
        </insert>
    </changeSet>

</databaseChangeLog>
